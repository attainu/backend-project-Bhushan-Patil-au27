

    <section class="hero py-16">
        <div class="container mx-auto flex items-center justify-between ">
            <div class="w-1/2">
                <h6 class="text-lg"><em>Feeling Hungry</em></h6>
                <h1 class="text-6xl font-bold">Don't think</h1>
                <button class="btn-primary px-6 py-1 rounded-full text-white mt-4">Order Now</button>
            </div>
            <div class="w-1/2">
                <img src="https://images.unsplash.com/photo-1613277367862-f8ef14db7748?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8YmlnJTIwYnVyZ2VyfGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="">
            </div>

        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="text-lg font-bold">All Pizzas</h1>
        <div class="grid grid-cols-4">
            <!-- //////////////////////////// -->
            <%pizzas.forEach(function(pizza){%>
            <div class="w-64 py-8">
                <div>
                    <img class="h-40 mb-2 mx-auto" src="<%= pizza.image%>" alt="">
                </div>
                <div class="text-center">
                    <h1 class="mb-4 text-lg"><%= pizza.name%></h1>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span>
                </div>
                <div class="text-center my-4">
                    <span class="font-bold text-lg">$<%= pizza.price%></span>
                    <button data-pizza = "<%= JSON.stringify(pizza)%>"  class="add-to-cart px-6 py-1 mx-8 rounded-full mx-10">
                        <span>+</span>
                        <span>Add</span>
                    </button>
                </div>
            </div>
        <%})%>
           
            <!-- ////////////////////////////////// -->
        </div>
   

    </section>
